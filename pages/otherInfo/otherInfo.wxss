.tab-items {
padding: 0 30rpx 20rpx;
margin-top: 30rpx;
display: flex;
flex-direction: column;
justify-content: space-between;
align-items: center;
}
.tab-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
}
.tab-item{
  width: 100%;
  position: relative;
height: 113rpx;
line-height: 113rpx;
}
.border-bottom{
  border-bottom: 1px solid #eee;
}

.tab-item-hover {
background-color: #e6e6e6;
}

.tab-icon {
width: 30rpx;
height: 30rpx;
}

.tab-text {
display: inline-block;
margin-left: 20rpx;
color: #1e1e1e;
}
.baseInfo{
  font-size:30rpx; 
  color:rgb(161, 159, 159);
}

.tab-info{
  position: absolute;
  top:0;
  right:55rpx;
  width:50%;
  height: 100%;
  text-align: right;
}

.tab-arrow {
display: inline-block;
width: 20rpx;
height: 20rpx;
border: 1px solid #cdcdcd;
  /* background-color: #1e1e1e; */
border-left: none;
border-bottom: none;
transform: rotate(45deg);
position:absolute;
right:0;
top:56rpx;
margin-top:-10rpx;
}

