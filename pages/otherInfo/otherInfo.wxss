/* user-hd */
.user-container {
padding: 50rpx 0;
/*border: 1px solid black;*/
}

.userinfo {
display: flex;
flex-direction: column;
align-items: center;
}
/* 头像 、名字*/
.page-hd__pic {
  margin: auto;
  width: 152.7rpx;
  height: 152.7rpx;
}

.page-hd__pic image {
  width: 152.7rpx;
  height: 152.7rpx;
  border-radius: 76.4rpx;
  margin-top: 40rpx;
}
.page-hd-border {
  margin: auto;
  width: 240rpx;
  height: 240rpx;
  border: 1px solid #ebecee;
  border-radius: 120rpx;
}
.page-hd-border:before {
  content: '';
  position: absolute;
  margin: auto;
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ebecee;
  border-radius: 100rpx;
  margin-left:18rpx;
  margin-top: 18rpx;
}
.page-hd-border:after {
  content: '';
  position: absolute;
  margin: auto;
  width: 170rpx;
  height: 170rpx;
  border: 1px solid #ebecee;
  border-radius: 85rpx;
  margin-left:33rpx;
  margin-top: -122rpx;
}
.page-hd__name{
  width: 100%;
  margin-top: 40rpx;
  font-size: 30rpx;
  font-weight: 800;
  text-align: center;
}

